{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug with tsx",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
            "args": [
                "src/index.ts"
            ],
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "protocol": "inspector",
            "console": "integratedTerminal"
        }
    ]
}